<div>
    <label for="title">Title: </label>
    <input type="text" id="title" name="title" value="<%= book.title %>" required>
</div>
<div>
    <label for="author">Author: </label>
    <select id="author" name="author" required>
        <option value="">--Choose an author--</option>
        <% authors.forEach(author => { %>
            <% if (author._id.toString() === book.author.toString()) { %>
                <option selected label="<%= author.name %>" value="<%= author.id %>">
            <% } else { %>
                <option label="<%= author.name %>" value="<%= author.id %>">
            <% } %>
        <% }) %>
    </select>
</div>
<div>
    <label for="publishedDate">published Date: </label>
    <input type="date" id="publishedDate" name="publishedDate" 
           value="<%= book.publishedDate == null ? 
           '': book.publishedDate.toISOString().split('T')[0] %>"
           required>
</div>
<div>
    <label for="pageCount">Page Count: </label>
    <input type="number" min="1" id="pageCount" name="pageCount" 
           value="<%= book.pageCount %>"  required>
</div>
<div>
    <label for="cover">Cover: </label>
    <input type="file" id="cover" name="cover" class="filepond" required>
</div>
<div>
    <label for="description">Description: </label>
    <textarea id="description" name="description"><%= book.description%></textarea>
</div>